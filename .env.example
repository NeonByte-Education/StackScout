# StackScout Environment Configuration

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_DB=stackscout
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# SPRING BOOT APPLICATION
# ============================================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/stackscout
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10

# ============================================
# REDIS (Cache)
# ============================================
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379
SPRING_REDIS_TIMEOUT=2000ms

# ============================================
# RABBITMQ (Message Broker)
# ============================================
SPRING_RABBITMQ_HOST=rabbitmq
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=guest
SPRING_RABBITMQ_PASSWORD=guest

# ============================================
# APPLICATION PROPERTIES
# ============================================
SPRING_APPLICATION_NAME=stackscout
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8081
SERVER_SERVLET_CONTEXT_PATH=/api/v1

# ============================================
# LOGGING
# ============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_STACKSCOUT=DEBUG

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8081/api/v1
NODE_ENV=development

# ============================================
# EXTERNAL APIs (Optional)
# ============================================
PYPI_API_TIMEOUT=30000
DOCKER_HUB_API_TIMEOUT=30000

# ============================================
# MONITORING (Optional - для production)
# ============================================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=metrics,prometheus
MANAGEMENT_METRICS_ENABLE_JVM=true
MANAGEMENT_METRICS_ENABLE_PROCESS=true
